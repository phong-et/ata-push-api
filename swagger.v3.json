{
  "openapi": "3.0.0",
  "info": {
    "title": "ATA Push API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "description": "Development server",
      "url": "http://localhost:8888"
    },
    {
      "description": "Test server",
      "url": "https://ata-push-api.herokuapp.com"
    },
    {
      "description": "Production server",
      "url": "https://ata-push-api.xyz"
    }
  ],
  "paths": {
    "/subscription/create": {
      "post": {
        "tags": ["Subscription"],
        "summary": "Create a subscription",
        "description": "Recevies a push subscription and save it to memory (RAM)",
        "requestBody": {
          "x-name": "command",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PushSubscription"
              }
            }
          },
          "required": true,
          "x-position": 1
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PushSubscriptionResponse"
                }
              }
            }
          }
        }
      }
    },
    "/subscription/notify/{id}": {
      "post": {
        "tags": ["Subscription"],
        "summary": "Notify to a specific subscription",
        "description": "Send a notifiction statement to push api",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "subscription hash id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NotificationPopup"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Notification statement was sent",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotificationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/subscription/notify": {
      "post": {
        "tags": ["Subscription"],
        "summary": "Notify to some subscriptions endpoint",
        "description": "Send a notification statement to push api",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PushSubscriptions"
              }
            }
          },
          "required": false,
          "x-position": 1
        },
        "responses": {
          "200": {
            "description": "Notification statement was sent",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotificationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/subscription/notify-all": {
      "post": {
        "tags": ["Subscription"],
        "summary": "Notify to all subscriptions endpoint",
        "description": "Send a notification statement to push api",
        "requestBody": {
          "x-name": "command",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NotificationPopup"
              }
            }
          },
          "required": false,
          "x-position": 1
        },
        "responses": {
          "200": {
            "description": "Notification statement was sent",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotificationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/subscription/list": {
      "get": {
        "tags": ["Subscription"],
        "summary": "List all existing subscription ids in memory",
        "responses": {
          "200": {
            "description": "Subscriptions has id list",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SubscriptionHashIds"
                }
              }
            }
          }
        }
      }
    },
    "/subscription/list/db": {
      "get": {
        "tags": ["Subscription"],
        "summary": "List all existing subscription object from db",
        "responses": {
          "200": {
            "description": "Subscriptions has id list",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListSubscriptions"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/subscription/clear": {
      "put": {
        "tags": ["Subscription"],
        "summary": "Clear all global.subscriptions",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListSubscriptions"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/subscription/sync": {
      "patch": {
        "tags": ["Subscription"],
        "summary": "Sync global.subscriptions with database",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListSubscriptions"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/subscription/check/{id}": {
      "get": {
        "tags": ["Subscription"],
        "summary": "Check subscription hash id is existed in memory",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "subscription hash id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Checking result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotificationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/notification/service/attendance/start": {
      "post": {
        "tags": ["Notification Attendance Service"],
        "description": "Start Notification Attendance service",
        "responses": {
          "201": {
            "description": "Request sent and excuted successfully"
          }
        }
      }
    },
    "/notification/service/attendance/stop": {
      "put": {
        "tags": ["Notification Attendance Service"],
        "description": "Stop Notification Attendance service",
        "responses": {
          "201": {
            "description": "Request sent and excuted successfully"
          }
        }
      }
    },
    "/notification/service/attendance/infos": {
      "get": {
        "tags": ["Notification Attendance Service"],
        "summary": "Get informations",
        "description": "Get informations of Notification Attendance service",
        "responses": {
          "201": {
            "description": "Message sent",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotificationInfo"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PushSubscription": {
        "required": ["endpoint"],
        "properties": {
          "endpoint": {
            "type": "string",
            "uniqueItems": true
          },
          "expirationTime": {
            "type": "string",
            "uniqueItems": true
          },
          "keys": {
            "$ref": "#/components/schemas/Keys"
          }
        }
      },
      "Keys": {
        "properties": {
          "p256dh": {
            "type": "string",
            "uniqueItems": true
          },
          "auth": {
            "type": "string",
            "uniqueItems": true
          }
        }
      },
      "PushSubscriptionResponse": {
        "required": ["id"],
        "properties": {
          "id": {
            "type": "string",
            "uniqueItems": true
          }
        }
      },
      "NotificationPopup": {
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the notification that we want to push"
          },
          "text": {
            "type": "string",
            "description": "Content of the notification that we want to push"
          },
          "image": {
            "type": "string",
            "description": "Content of the notification that we want to push"
          },
          "tag": {
            "type": "string",
            "description": "Refer at https://developer.mozilla.org/en-US/docs/Web/API/Notification/tag"
          },
          "url": {
            "type": "string",
            "description": "Click to notificaition popup will open this url"
          }
        }
      },
      "PushSubscriptions": {
        "properties": {
          "subscriptionHashIds":{
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["a", "b", "c"]
          },
          "title": {
            "type": "string",
            "description": "Title of the notification that we want to push"
          },
          "text": {
            "type": "string",
            "description": "Content of the notification that we want to push"
          },
          "url": {
            "type": "string",
            "description": "Click to notificaition popup will open this url"
          }
        }
      },
      "NotificationResponse": {
        "required": ["status"],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "notifiedSubscriptions": {
            "type": "object",
              "$ref": "#/components/schemas/notifiedSubscriptions"
          }
        }
      },
      "notifiedSubscriptions": {
        "properties": {
          "success": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["a", "b", "c"]
          },
          "failed": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["a", "b", "c"]
          }
        }
      },
      "SubscriptionHashIds": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "example": ["a", "b", "c"]
      },
      "ListSubscriptions": {
        "required": ["success"],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string",
            "uniqueItems": true
          },
          "subscriptions": {
            "type": "array",
            "items": {
              "type": "object",
              "$ref": "#/components/schemas/SubscriptionDto"
            },
            "example": [
              {
                "id": "7af99b26-2470-4c29-bea7-08d8a236de55",
                "userId": "5af5adf1-c5e3-4069-ae3a-08d86b417c61",
                "subscriptionHashId": "string",
                "subscriptionJSON": "string"
              }
            ]
          }
        }
      },
      "SubscriptionDto": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "format": "guid"
          },
          "userId": {
            "type": "string",
            "format": "guid"
          },
          "subscriptionHashId": {
            "type": "string",
            "nullable": true
          },
          "subscriptionJSON": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "NotificationInfo": {
        "properties": {
          "serviceStatus": {
            "type": "string",
            "description": "service Status"
          },
          "jobNotifyCheckinCount": {
            "type": "string",
            "description": "jobNotifyCheckinCount"
          },
          "jobNotifyCheckoutCount": {
            "type": "string",
            "description": "jobNotifyCheckoutCount"
          },
          "notifyTime": {
            "type": "string",
            "description": "notifyTime"
          },
          "errorMessage": {
            "type": "string",
            "description": "errorMessage"
          }
        }
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "Access token is missing or invalid"
      },
      "InternalServerError": {
        "description": "Error from AtaCore Server"
      }
    },
    "securitySchemes": {
      "JWT": {
        "type": "apiKey",
        "description": "Type into the textbox: Bearer {your JWT token}.",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "JWT": []
    }
  ]
}
