{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Push server API",
    "description": "Web push notification demo server",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "ata-push-api.herokuapp.com/",
  "basePath": "",
  "tags": [
    {
      "name": "Web Push Subscription",
      "description": "API for Web push subscription"
    },
    {
      "name": "Notification Checkin service",
      "description": "API for Notification Checkin Service"
    },
    {
      "name": "Notification Checkout service",
      "description": "API for Notification Checkout Service"
    }
  ],
  "schemes": ["https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/notification/service/checkin/start": {
      "post": {
        "tags": ["Notification Checkin service"],
        "description": "Start Notification Checkin service",
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "Request sent and excuted successfully"
          }
        }
      }
    },
    "/notification/service/checkin/stop": {
      "put": {
        "tags": ["Notification Checkin service"],
        "description": "Stop Notification Checkin service",
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "Request sent and excuted successfully"
          }
        }
      }
    },
    "/notification/service/checkin/infos": {
      "get": {
        "tags": ["Notification Checkin service"],
        "summary": "Check informations of Notification Checkin service",
        "responses": {
          "201": {
            "description": "Message sent"
          }
        }
      }
    },
    "/notification/service/checkout/start": {
      "post": {
        "tags": ["Notification Checkout service"],
        "description": "Start Notification Checkout service",
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "Request sent and excuted successfully"
          }
        }
      }
    },
    "/notification/service/checkout/stop": {
      "put": {
        "tags": ["Notification Checkout service"],
        "description": "Stop Notification Checkout service",
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "Request sent and excuted successfully"
          }
        }
      }
    },
    "/notification/service/checkout/infos": {
      "get": {
        "tags": ["Notification Checkout service"],
        "summary": "Check informations of Notification Checkout service",
        "responses": {
          "201": {
            "description": "Message sent"
          }
        }
      }
    },
    "/subscription/create": {
      "post": {
        "tags": ["Web Push Subscription"],
        "description": "Recevies a push subscription and save it in memory",
        "parameters": [
          {
            "name": "pushSubscription",
            "in": "body",
            "description": "the subscription to be saved",
            "schema": {
              "$ref": "#/definitions/pushSubscription"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "everything ok",
            "schema": {
              "$ref": "#/definitions/pushSubscriptionResponse"
            }
          }
        }
      }
    },
    "/subscription/notify/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of the subscription that we want to find",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Web Push Subscription"],
        "summary": "Sends a push message to the existing push subscription",
        "responses": {
          "202": {
            "description": "Message sent"
          }
        }
      }
    },
    "/subscription/notify-all": {
      "parameters": [
        {
          "name": "title",
          "in": "query",
          "required": false,
          "description": "Title of the notification that we want to push",
          "type": "string"
        },
        {
          "name": "text",
          "in": "query",
          "required": false,
          "description": "Content of the notification that we want to push",
          "type": "string"
        },
        {
          "name": "image",
          "in": "query",
          "required": false,
          "description": "Background image of the notification that we want to push",
          "type": "string"
        },
        {
          "name": "tag",
          "in": "query",
          "required": false,
          "description": "Refer at https://developer.mozilla.org/en-US/docs/Web/API/Notification/tag",
          "type": "string"
        },
        {
          "name": "url",
          "in": "query",
          "required": false,
          "description": "Click to notificaition popup will open this url",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Web Push Subscription"],
        "summary": "Sends a push message to all existing push subscriptions",
        "responses": {
          "202": {
            "description": "Message sent"
          }
        }
      }
    },
    "/subscription/list": {
      "get": {
        "tags": ["Web Push Subscription"],
        "summary": "List all existing push subscription ids",
        "responses": {
          "202": {
            "description": "Message sent"
          }
        }
      }
    },
    "/subscription/check/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of the subscription that we want to find",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Web Push Subscription"],
        "summary": "Check existing push subscription id",
        "responses": {
          "202": {
            "description": "Message sent"
          }
        }
      }
    }
  },
  "definitions": {
    "pushSubscription": {
      "required": ["endpoint"],
      "properties": {
        "endpoint": {
          "type": "string",
          "uniqueItems": true
        },
        "expirationTime": {
          "type": "string",
          "uniqueItems": true
        },
        "keys": {
          "$ref": "#/definitions/Keys"
        }
      }
    },
    "Keys": {
      "properties": {
        "p256dh": {
          "type": "string",
          "uniqueItems": true
        },
        "auth": {
          "type": "string",
          "uniqueItems": true
        }
      }
    },
    "pushSubscriptionResponse": {
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        }
      }
    }
  }
}
